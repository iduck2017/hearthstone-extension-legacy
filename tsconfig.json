{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2018", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/type",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*", "backup/warrior/fiery-war-axe", "backup/mage", "backup/neutral2",
  ],
  "exclude": [
    "backup/**/*",
    "scripts/**/*"
  ]
}